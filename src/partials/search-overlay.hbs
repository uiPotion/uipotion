<div class="search-overlay" data-js-search-overlay>
  <div class="search-overlay-contents">
    <button class="search-overlay-close-btn" data-js-search-close aria-label="Close search">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
    <div class="search-overlay-input-wrapper">
      <input
        class="search-overlay-input"
        type="text"
        placeholder="Search potions..."
        autocomplete="off"
        autocorrect="off"
        autocapitalize="off"
        spellcheck="false"
        autofocus
        data-js-search-input
        aria-label="Search potions"
      />
    </div>
    <div class="search-overlay-results" data-js-search-results role="list" aria-live="polite" aria-label="Search results"></div>
  </div>
</div>
