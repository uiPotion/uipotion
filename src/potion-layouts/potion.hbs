{{> head title=title description=excerpt agentManifest=agentManifest }}

<div class="potion-page">
  <!-- Hero Header with AI Link -->
  <header class="potion-hero">
    <div class="potion-hero-container">
      <div class="potion-breadcrumb">
        <a href="{{relativePath 'index.html'}}">‚Üê All Potions</a>
        <span>/</span>
        <span>{{category}}</span>
      </div>
      
      <h1 class="potion-hero-title">{{title}}</h1>
      
      {{#if excerpt}}
      <p class="potion-hero-description">{{excerpt}}</p>
      {{/if}}
      
      <!-- AI Agent Link - Prominently displayed -->
      <div class="potion-ai-card">
        <div class="potion-ai-card-header">
          <svg class="potion-ai-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
          </svg>
          <span>AI Agent Guide</span>
        </div>
        {{> copy-url-section path=agentManifest}}
        <p class="potion-ai-hint">
          Use this URL with your AI coding assistant (Claude, ChatGPT, etc.) to automatically implement this component in your stack
        </p>
        <a href="{{relativePath agentManifest}}" class="potion-download-btn" download>
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
          </svg>
          Download JSON
        </a>
      </div>
      
      <!-- Meta Info -->
      <div class="potion-meta-bar">
        <div class="potion-category-badge">{{category}}</div>
        {{#if tags}}
        <div class="potion-tags-list">
          {{#each tags}}
          <span class="potion-tag">{{this}}</span>
          {{/each}}
        </div>
        {{/if}}
      </div>
    </div>
  </header>
  
  <!-- Main Content -->
  <main class="potion-main">
    <div class="potion-main-container">
      <article class="potion-article">
        {{{content}}}
      </article>
    </div>
  </main>
</div>

<!-- Scroll to Top Button -->
<button class="potion-scroll-top" id="potionScrollTop" aria-label="Scroll to top">
  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
  </svg>
</button>

<script src="{{relativePath 'assets/js/scroll-to-top.js'}}"></script>
<script src="{{relativePath 'assets/js/copy-button.js'}}"></script>

{{> footer}}
