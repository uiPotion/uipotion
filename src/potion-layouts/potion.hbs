{{> head title=title description=excerpt agentManifest=agentManifest currentPath=path tags=tags publicationDate=publicationDate }}

<div class="potion-page">
  <!-- Hero Header with AI Link -->
  <header class="potion-hero" role="banner">
    <div class="potion-hero-container">
      <nav class="potion-breadcrumb" aria-label="Breadcrumb navigation">
        <a href="/">Home</a>
        <span aria-hidden="true">/</span>
        <a href="/potions">All Potions</a>
        <span aria-hidden="true">/</span>
        <span>{{category}}</span>
        <span aria-hidden="true">/</span>
        <span>{{title}}</span>
        <a href="#potion-main-content" class="skip-link">Skip to content</a>
      </nav>
      
      <h1 class="potion-hero-title">{{title}}</h1>
      
      {{#if excerpt}}
      <p class="potion-hero-description">{{excerpt}}</p>
      {{/if}}
      
      {{#if agentManifest}}
      {{> potion-resources-bar path=path agentManifest=agentManifest}}
      {{/if}}
      
      <!-- Meta Info -->
      <div class="potion-meta-bar" role="group" aria-label="Potion metadata">
        <div class="potion-category-badge" aria-label="Category: {{category}}">{{category}}</div>
        {{#if tags}}
        <div class="potion-tags-list" role="list" aria-label="Tags">
          {{#each tags}}
          <span class="potion-tag" role="listitem">{{this}}</span>
          {{/each}}
        </div>
        {{/if}}
      </div>
    </div>
  </header>
  
  <!-- Main Content -->
  <main class="potion-main" id="potion-main-content" role="main">
    <div class="potion-main-container">
      <article class="potion-article">
        {{{content}}}
      </article>
    </div>
  </main>
</div>

<!-- Scroll to Top Button -->
<button class="potion-scroll-top" id="potionScrollTop" aria-label="Scroll to top of page">
  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
  </svg>
  <span class="sr-only">Scroll to top</span>
</button>

<script src="/assets/js/scroll-to-top.js"></script>
<script src="/assets/js/copy-button.js"></script>

{{> footer}}
